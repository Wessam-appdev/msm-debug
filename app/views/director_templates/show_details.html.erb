<h1>
  Director #<%= @this_director.id %> details
</h1>

<a href="/directors/<%= @this_director.id %>/edit">
  Edit director
</a>

<hr>

<dl>
  <dt>
    Dob
  </dt>
  <dd>
    <%= @this_director.dob %>
  </dd>

  <dt>
    Name
  </dt>
  <dd>
    <%= @this_director.name %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @this_director.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @this_director.image_url %>" width="320">
  </dd>

</dl>

<a href="/delete_director/<%= @this_director.id %>" class="btn btn-danger">
  Delete director
</a>

<hr>

<a href="/directors">
  Go back
</a>
